<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @songs.any? %>
    <div class='pagination_container'>
      <%= render :partial => 'songs' %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Refinery::Music::Admin::SongsController.searchable? %>
      <li>
        <%= render :partial => "refinery/admin/search",
                    :locals => {
                      :url => main_app.refinery_admin_album_songs_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), main_app.new_refinery_admin_album_song_url,
                   :class => "add_icon" %>
    </li>
    <li>
      <%=link_to t('.settings'), main_app.refinery_admin_music_settings_url, :class => "edit_icon" %>
    </li>
  <% if !searching? and Refinery::Admin::SongsController.sortable? and Refinery::Song.count > 1 %>
    <li>
      <%= link_to t('.reorder', :what => "Songs"),
                   main_app.refinery_admin_album_songs_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Songs"),
                   main_app.refinery_admin_album_songs_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<%= render :partial => "refinery/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Refinery::Music::Admin::SongsController.sortable? and Refinery::Song.count > 1 %>
