<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @albums.any? %>
    <div class='pagination_container'>
      <%= render :partial => 'albums' %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('refinery.admin.search.no_results') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if searching? %>
      <li>
        <%= render :partial => "refinery/admin/search",
                    :locals => {
                      :url => main_app.refinery_admin_albums_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), refinery.new_music_admin_album_path,
                   :class => "add_icon" %>
    </li>
    <li>
      <%=link_to t('.settings'), refinery.music_admin_music_settings_url, :class => "edit_icon" %>
    </li>
  <% if !searching? and Refinery::Music::Admin::AlbumsController.sortable? and Refinery::Music::Album.count > 1 %>
    <li>
      <%= link_to t('.reorder', :what => "Albums"),
                   main_app.refinery_admin_albums_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Albums"),
                   main_app.refinery_admin_albums_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<%= render :partial => "refinery/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Refinery::Music::Admin::AlbumsController.sortable? and Refinery::Music::Album.count > 1 %>
