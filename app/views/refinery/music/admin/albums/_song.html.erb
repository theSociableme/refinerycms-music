<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(song) -%>">
  <span class='title'>
    <%= song.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), main_app.refinery_admin_album_song_path(@album, song),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), main_app.edit_refinery_admin_album_song_path(@album, song),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), main_app.refinery_admin_album_song_path(@album, song),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => song.title),
        :method => :delete %>
  </span>
</li>
