<div id='records'>
  
  
    <div class='pagination_container'>
      
		<ul id='sortable_list'>
		  <%= render :partial => 'song', :collection => @album.songs.order("position") %>
		</ul>
		<%= render :partial => "refinery/admin/sortable_list",
		            :locals => {
		              :continue_reordering => (local_assigns.keys.include?(:continue_reordering)) ? continue_reordering : true
		            } %>
    </div>
  
</div>

<div id='actions'>
  <ul>
    <% if Refinery::Music::Admin::SongsController.searchable? %>
      <li>
        <%= render :partial => "refinery/admin/search",
                    :locals => {
                      :url => refinery.music_admin_songs_url(@album)
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), refinery.new_music_admin_song_url(:album_id => @album.id),
                   :class => "add_icon" %>
    </li>
	<li>
	  <%= link_to t('.reorder', :what => "Songs"),
                  refinery.music_admin_songs_url(:album_id => @album.id),
	               :id => "reorder_action",
	               :class => "reorder_icon" %>

	  <%= link_to t('.reorder_done', :what => "Songs"),
                  refinery.music_admin_songs_url(@album),
	               :id => "reorder_action_done",
	               :style => "display: none;",
	               :class => "reorder_icon" %>
	</li>
 </ul>


</div>
<%= render :partial => "make_sortable_songs",
            :locals => {
              :tree => false
            } if !searching? and Refinery::Music::Admin::SongsController.sortable? and @album.songs.count > 1 %>
    
  